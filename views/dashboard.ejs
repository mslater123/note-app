<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <link rel="stylesheet" href="/styles/dashboard.css"> <!-- Ensure correct path -->
</head>
<body>
    <div class="container">
        <h1>Welcome, <%= username %>!</h1>
        <p>This is your dashboard.</p>

        <!-- To-Do Form -->
        <form id="add-todo">
            <input type="text" id="title" placeholder="Enter a title" required>
            <textarea id="details" placeholder="Enter details" required></textarea>
            <input type="color" id="color" value="#ffffff">
            <button type="submit">Add</button>
        </form>

        <!-- To-Do List -->
        <h2>Your To-Do List</h2>
        <ul id="todo-list">
            <% todos.forEach(todo => { 
                const todoColor = todo.color || '#ffffff';
            %>
            <li class="todo-item" data-id="<%= todo._id %>" style="background-color: <%= todoColor %>">
                <div class="content">
                    <strong><%= todo.title %></strong>
                    <p class="details"><%= todo.details %></p>
                </div>
                <div class="actions">
                    <button class="edit">Edit</button>
                    <button class="view">View</button>
                    <button class="delete">Delete</button>
                </div>
            </li>
            <% }); %>
        </ul>

        <!-- Logout Button -->
        <form action="/logout" method="GET">
            <button type="submit">Logout</button>
        </form>
    </div>

    <script src="/scripts/dashboard.js"></script>
</body>
</html>

<%- include('partials/footer') %>
